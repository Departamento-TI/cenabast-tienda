<div class="flex flex-row gap-2 justify-between mt-12 mb-6" data-hook="checkout_header">
  <div class="flex flex-1 flex-col gap-2">
    <%= link_to spree.root_path, class: 'text-base text-primary-700 font-semibold self-start' do %>
      <svg class="mr-2 float-left h-full" width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12.8327 6.99984H1.16602M1.16602 6.99984L6.99935 12.8332M1.16602 6.99984L6.99935 1.1665" stroke="currentColor" stroke-width="1.67" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <%= Spree.t('checkout_page.go_back_to_store') %>
    <% end %>

    <div class="text-3xl">
      <h1 data-hook="checkout_title"><%= Spree.t('checkout_page.header') %></h1>
    </div>
    <p class="text-base text-gray-500"><%= Spree.t('checkout_page.description') %></p>
  </div>

  <div class="flex">
    <div class="p-[16px] max-w-full max-h-full bg-white rounded-lg border border-gray-200 mb-[24px] shadow-sm font-medium text-left flex flex-col gap-1">
      <div class="flex flex-row gap-12 justify-between">
        <span><%= Spree.t('checkout_page.subtotal') %></span>
        <span><%= @subtotal %></span>
      </div>

      <!-- Divider -->
      <div class="border-b border-gray-200 my-2 mx-4 h-[1px] w-auto"></div>

      <div class="flex flex-row gap-12 justify-between font-semibold">
        <span><%= Spree.t('checkout_page.order_total') %></span>
        <span><%= @total %></span>
      </div>
    </div>
  </div>
</div>