<div>
  <!-- Gray bar -->
  <div class="h-16 w-full bg-gray-100">
    <div class="px-8 py-[14px] h-full w-full">

      <%= render Common::Layout::Header::GrayPickerComponent.new(
        title: 'Solicitante',
        value: 'SS Met Sur Oriente - 76.817.123-3'
      ) %>

      <%= render Common::Layout::Header::GrayPickerComponent.new(
        title: 'Destinatario',
        value: 'Selecciona destinatario'
      ) %>

      <%= render Common::Layout::Header::GrayPickerComponent.new(
        title: 'Centro de costo',
        value: 'Selecciona Centro de costo'
      ) %>

      <%= render Common::Layout::Header::GrayPickerComponent.new(
        title: 'Canal',
        value: 'Selecciona Tipo de Compra'
      ) %>

      <%= render Common::Layout::Header::ProfileComponent.new(user_data: @user_data) %>
    </div>
  </div>

  <!-- White bar -->
  <div class="h-20 w-full bg-white drop-shadow">
    <div class="px-8 2xl:px-28 py-4 h-full w-full">
      <%= image_tag "cenabast-logo.png", class: 'h-full w-auto float-left', role: 'header-logo' %>

      <div class="float-left pl-[26px]">
        <%= link_to 'Medicamentos', '#', class: 'font-semibold text-base text-gray-500 px-[12px]' %>

        <%= link_to 'FÃ¡rmacos', '#', class: 'font-semibold text-base text-gray-500 px-[12px]' %>

        <%= link_to 'Insumos', '#', class: 'font-semibold text-base text-gray-500 px-[12px]' %>
      </div>

      <!-- Cart -->
      <div class="float-right pr-[26px] relative top-[-5px]" role='cart-button-container'>
        <%= link_to spree.cart_path do %>
          <%= render Common::Button::IconComponent.new(
            button_params: {
              text: 'Articulos (0)',
              hierarchy: 'primary',
              size: 'lg',
            },
            icon_path: 'cart',
            icon: 'leading'
          ) %>
        <% end %>
      </div>

      <!-- Searchbar -->
      <div class="float-right pr-[26px] relative top-[-5px]" role='searchbar'>
        <form>
            <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>

            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pe-10 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
            </div>
            <input type="search" id="default-search" class="block w-full p-[10px] ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Buscar producto" required>
        </form>
      </div>
    </div>
  </div>
</div>
