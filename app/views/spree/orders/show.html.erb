<div class='order-show container d-flex flex-column align-items-center flex-lg-wrap flex-lg-row justify-content-center' id="order_summary" data-hook>
  <% if order_just_completed?(@order) %>
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm mt-12 p-[24px]">
      <div class="flex flex-row justify-between gap-4">
        <div class="flex-1">
          <h5 class="w-100 text-left text-gray-900 font-semibold"><%= Spree.t(:order_success) %></h5>
          <p class="order-show-explain w-100 text-left text-base text-gray-700"><%= Spree.t(:order_success_explain) %></p>
        </div>
        <div>
          <%= icon(name: 'check-mark-circle',
                   classes: 'text-success-500 d-block d-lg-none mx-auto order-show-check-mark mb-4',
                   width: 56,
                   height: 56) %>
          <%= icon(name: 'check-mark-circle',
                   classes: 'text-success-500 d-none d-lg-block mx-auto order-show-check-mark mb-4',
                   width: 102,
                   height: 102) %>
        </div>
      </div>
    </div>
  <% end %>

  <p class="order-show-number w-100 text-left mb-8">
    <%= @order.number %> / <%= pretty_date(@order.completed_at) %>
  </p>
  <%= render partial: 'spree/shared/order_details', locals: { order: @order } %>
</div>
